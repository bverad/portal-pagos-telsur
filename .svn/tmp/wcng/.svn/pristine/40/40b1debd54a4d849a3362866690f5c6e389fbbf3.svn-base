.container-master {
  position: relative;
}

.container-master::before {
  content: ""; display: block; position: absolute; top: 0; right: 0; bottom: 0; left: 0;
}

.container-mail {
  position: relative; width: 500px; margin: 20px auto;
}

.container-mail::before {
  content: ""; display: block; top: 0; right: 0; bottom: 0; left: 0;
}

.container-inner {
  background: #FFF; margin: 20px auto; -webkit-box-shadow: 0px 0px 10px 2px rgba(176, 174, 176, 1); -moz-box-shadow: 0px 0px 10px 2px rgba(176, 174, 176, 1); box-shadow: 0px 0px 10px 2px rgba(176, 174, 176, 1);
}

.head-voucher {
  position: relative; height: 100px; color: #FFF; background: #1b4fc7; 
}

.head-voucher h2 {
  position: absolute; top: 0; bottom: 0; left: 0; right: 0; width: 90%; height: 30%; margin: auto;
}

.display-5 {
  font-size: 1.5rem; font-weight: 300; line-height: 1.2;
}

.voucher {
  background: #FFF; margin-top: 5px; margin-bottom: 5px;
}

.markup {
  border-left: 5px solid #1B4FC7; background: #EEE; color: gray; padding-top: 5px; padding-bottom: 20px; margin-top: 5px;
}

.text-desc {
  color: gray; font-weight: bold;
}

.d-flex {
  font-size: 14px;
}

.btn-group-sm>.btn, .btn-sm {
  padding: 0.25rem .5rem; font-size: .875rem; line-height: 1; border-radius: .2rem;
}

body {
    font-size: 14px;
}

